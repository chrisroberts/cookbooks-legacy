[global]
pid file = /var/run/ceph/$name.pid
debug ms = 1


[mon]
mon data = /home/ceph/mon$id

[mon0]
host = ceph01.local
mon addr = 192.168.1.28:6789

[mon1]
host = ceph02.local
mon addr = 192.168.1.27:6789

[mon2]
host = ceph03.local
mon addr = 192.168.1.25:6789


[mds]

[mds0]
host = ceph01.local

[mds1]
host = ceph02.local

[mds2]
host = ceph03.local

[osd]
user ceph
osd data = /home/ceph/osd$id

[osd0]
host = ceph01.local
btrfs devs = /dev/sdb /dev/sdc /dev/sdd /dev/sde

[osd1]
host = ceph02.local
btrfs devs = /dev/sdb /dev/sdc /dev/sdd /dev/sde

[osd2]
host = ceph03.local
btrfs devs = /dev/sdb /dev/sdc /dev/sdd /dev/sde

[group everyone]
addr = 0.0.0.0/0

[mount /]
allow = %everyone
