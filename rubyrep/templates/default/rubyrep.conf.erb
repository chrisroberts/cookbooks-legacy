RR::Initializer::run do |config|
  config.left = {
    :adapter  => '<%= @adapter %>', 
    :database => '<%= @database_name %>',
    :username => '<%= @username %>',
    :password => '<%= @password %>',
    :host     => '<%= @left_host %>'
  }
    
  config.right = {
    :adapter  => '<%= @adapter %>', 
    :database => '<%= @database_name %>',
    :username => '<%= @username %>',
    :password => '<%= @password %>',
    :host     => '<%= @right_host %>'
  }
  
  config.include_tables /./
  config.exclude_tables 'schema_migrations'
  
